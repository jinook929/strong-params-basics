<h1>My edit</h1>
<%= form_for(@post) do |f| %>
  <p>
    <%= f.label "Post title:", id: "post_title" %>
    <br>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label "Post description:", id: "post_description" %>
    <br>
    <%= f.text_area :description, autofocus: true %>
  </p>
  <%= submit_tag "Update Post" %>
<% end %>
<%= link_to "back", post_path(@post) %>
